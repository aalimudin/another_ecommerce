{% extends 'base.html.twig' %}

{% block title %}E-Commerce{% endblock %}

{% block body %}
    {% if address %}
        <table id="address" class="table table-striped">
            <thead>
                <tr>
                    <th>Address</th>
                    <th><a href="/address/new" class="btn btn-dark">New</a></th>
                </tr>
            </thead>
            <tbody>
            {# {% for flashMessage in app.session.flashbag.get('error') %}

                {{ flashMessage }}

            {% endfor %} #}
                {% for address in address %}
                    <tr>
                        <td>{{ address.address}}</td>
                        <td>
                            <a href="/address/edit/{{ address.id }}" class="btn btn-dark" data-id="{{ address.id }}">Edit</a>
                            <a href="/address/delete/{{ address.id }}" class="btn btn-danger delete-article">Delete</a>
                            {# {{form_start(form)}}
                            {{form_widget(form)}}
                            {{form_end(form)}} #}
                            {# <a href="#" class="btn btn-danger delete-article" data-id="{{ product.id }}">Delete</a> #}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No address in here</p>  
        <th><a href="/address/new" class="btn btn-dark">New</a></th>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}